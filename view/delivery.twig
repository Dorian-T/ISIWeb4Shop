{% extends "layout/base.twig" %}

{% block title %}IsiWeb4Shop - Adresse de livraison{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="mb-3">Ajouter une adresse de livraison :</h2>
                <form action="index.php?action=payement" method="post">
                    <div class="form-group row">
                        <input type="text" class="form-control col mx-3" id="firstname" name="firstname" placeholder="Prénom">
                        <input type="text" class="form-control col mx-3" id="lastname" name="lastname" placeholder="Nom">
                    </div>
                    <input type="text" class="form-control mb-3" id="add1" name="add1" placeholder="Adresse">
                    <input type="text" class="form-control mb-3" id="add2" name="add2" placeholder="Complément d'adresse">
                    <div class="form-group row">
                        <input type="text" class="form-control col mx-3" id="city" name="city" placeholder="Ville">
                        <input type="text" class="form-control col mx-3" id="postcode" name="postcode" placeholder="Code Postal">
                    </div>
                    <div class="form-group row">
                        <input type="number" class="form-control col mx-3" id="phone" name="phone" placeholder="Téléphone">
                        <input type="email" class="form-control col mx-3" id="email" name="email" placeholder="Email">
                    </div>
                    <input type="submit" class="btn btn-primary" name="newAdress" value="Enregistrer">
                </form>
            </div>

            {% if delivery_address %}
                <div class="col-md-6">
                    <h2 class="mb-3">Choisir une adresse existante :</h2>
                    <p> Nom : {{ delivery_address.surname }} </p>
                    <p> Prénom : {{ delivery_address.forname }} </p>
                    <p> Adresse 1 : {{ delivery_address.add1 }} </p>
                    <p> Adresse 2 : {{ delivery_address.add2 }} </p>
                    <p> Ville : {{ delivery_address.add3 }} </p>
                    <p> Code postal : {{ delivery_address.postcode }} </p>
                    <form method='post' action='index.php?action=payement'>
                        <input type='submit' class="btn btn-primary" name="oldAdress" value='Choisir'>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
