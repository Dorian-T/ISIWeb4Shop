{% block content %}  
    
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title my-4">Entrez vos informations de carte bancaire</h2>
                <form action="index.php?action=thankyou" method="post">
                    <div class="form-group">
                        <label for="cardNumber">Num√©ro de carte</label>
