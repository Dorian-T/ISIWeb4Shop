{% extends "layout/base.twig" %}

{% block content %}
    <link rel="stylesheet" href="style/productDetails.css">

    <div class="container">
        <div class="product-details">
            <img class="product-image" src="Img/{{ product.image }}" alt="{{ product.name }}">
            <div class="product-info">
                <h1>{{ product.name }}</h1>
                <p>{{ product.description }}</p>
                <p>Prix : {{ product.price }}</p>
                <p>Quantité : {{ product.quantity }}</p>
                <div class="product-action">
                    <input type="number" min="1" max="{{ product.quantity }}" value="1">
                    <button>Ajouter au panier</button>
                </div>
            </div>
        </div>

        <h2>Avis des acheteurs</h2>
        {% for review in reviews %}
            <div class="review">
                <h3>{{ review.title }}</h3>
                <p>Par {{ review.name_user }}</p>
                <p>{{ review.description }}</p>
                <p>Note : {{ review.stars }}/5</p>
            </div>
        {% endfor %}

        <div class="add-review">
            <h2>Ajouter un commentaire</h2>
            <form action="index.php?action=products&id={{ product.id }}" method="post">
                <input type="hidden" name="productId" value="{{ product.id }}">
                <label for="name">Votre nom :</label>
                <input type="text" name="name" required>
                <label for="stars">Votre note :</label>
                <select name="stars" required>
                    <option value="1">1 étoile</option>
                    <option value="2">2 étoiles</option>
                    <option value="3">3 étoiles</option>
                    <option value="4">4 étoiles</option>
                    <option value="5">5 étoiles</option>
                </select>
                <label for="title">Titre du commentaire :</label>
                <input type="text" name="title" required>
                <label for="description">Votre commentaire :</label>
                <textarea name="description" required></textarea>
                <button type="submit">Ajouter le commentaire</button>
            </form>
        </div>
    </div>
{% endblock %}