{% extends "layout/base.twig" %}

{% block title %}IsiWeb4Shop{% endblock %}

{% block content %}

    <form action="index.php?action=adminC" method="post">
        <div class='form-group col-lg-5'>
            <div class="form-row">
                <div class="col">
                    <select class='form-control' name='id'>
                    {% if order is not empty %}
                        {% for i in order %}
                            <option value='{{ i.id }}'>Commande {{ i.id }}</option>
                        {% endfor %}
                    {% endif %}
                    </select>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-secondary btn-lg center-block">Valider la commande</button>
                </div>
            </div>
        </div>
    </form>

    <table class="table">
        <tr>
            <th scope="col">Numero de Commande </th>
            <th scope="col">Numero produit</th>
            <th scope="col">Quantité</th>
            <th scope="col">Enrengistré</th>
        </tr>

        {% if orderAdmin is not empty %}
            {% for i in orderAdmin %}
            <tr>
                <td>
                    {% if i.status == 10 %}
                        {{ i.order_id }} (Validé)
                    {% else %}
                        {{ i.order_id }}
                    {% endif %}
                </td>
                <td>{{ i.product_id }}</td>
                <td>{{ i.quantity }}</td>
                <td>{{ i.registered }}</td>
            </tr>
            {% endfor %}
        {% endif %}
    </table>

{% endblock %}