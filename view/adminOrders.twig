{% extends "layout/base.twig" %}

{% block content %}
    <div class="container mt-4">
        <h2 class="mb-4">Gestion des Commandes</h2>
        <table class="table table-striped" aria-describedby="liste des commandes">
            <thead>
                <tr>
                    <th>ID Commande</th>
                    <th>Date de Commande</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.date }}</td>
                        <td>{{ order.total }}</td>
                        <td>
                            {% if order.status == 0 %}
                                <span class="badge bg-warning text-dark">En attente</span>
                            {% elseif order.status == 10 %}
                                <span class="badge bg-success">Validée</span>
                            {% elseif order.status == 1 %}
                                <span class="badge bg-danger">Adresse</span>
                            {% elseif order.status == 2 %}
                                <span class="badge bg-danger">Paiement</span>
                            {% else %}
                                <span class="badge bg-secondary">Autre</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if order.status == 2 %}
                                <form method="post" action="index.php?action=admin&page=orders">
                                    <input type="hidden" name="id" value="{{ order.id }}">
                                    <button type="submit" class="btn btn-success">Valider</button>
                                </form>
                            {% elseif order.status == 10 %}
                                <span class="text-muted">Commande validée</span>
                            {% else %}
                                <span class="text-muted">Commande en attente</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
